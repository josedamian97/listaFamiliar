{
  "name": "Usuario",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "apellidos": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "miembros": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": ""
    },
    "hasone": {
      "type": "hasOne",
      "model": "ListaFamiliar",
      "foreignKey": "owner"
    },
    "hasnadbelongstomany": {
      "type": "hasAndBelongsToMany",
      "model": "ListaFamiliar",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "modified"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "aceptarSolicitud"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "post"
    }
  ],
  "methods": {
    "prototype.aceptarSolicitud": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": true,
          "description": "el morcillon",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "array",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "le enviamos el id del usuario y si tiene alguna solicitud en la lista de miembros, se le aprobara la solicitud",
      "http": [
        {
          "path": "/aceptarsolicitud",
          "verb": "put"
        }
      ]
    }
  }
}
